{% for type,messages in app.session.flashBag.all() %}
    <div class="alert alert-{{ type }}">
        {% for message in messages %}
            {{ message }}
            {{ not loop.last ? '<br>' }}
        {% endfor %}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
{% endfor %}